<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/grade_group_rl"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <com.bonc.mobile.plugin.circleimage.CircleImageView
            android:id="@+id/group_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp" />

        <TextView
            android:id="@+id/group_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/group_image"
            android:textColor="#666666"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/group_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grade_person_rl"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <com.bonc.mobile.plugin.circleimage.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/person_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/person_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/group_image"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/person_jobnum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#666666"
                android:textSize="11sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/person_delete_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:scaleType="fitXY" />

        <CheckBox
            android:id="@+id/person_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:checked="false" />
    </RelativeLayout>

    <View
        android:id="@+id/adapterLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="#ebebeb" />
</LinearLayout>